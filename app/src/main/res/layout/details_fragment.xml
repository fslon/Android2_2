<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentDetailsBackground"
    tools:context=".view.details.DetailsFragment">

    <TextView
        android:id="@+id/textview_city"
        style="@style/forLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:text="@string/lat_lon"
        android:textColor="@color/colorForCoordinates"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_city" />


    <TextView
        android:id="@+id/textview_city_result"
        style="@style/forResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_coordinates"

        />

    <TextView
        android:id="@+id/textview_temperature"
        style="@style/forLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_city_result" />

    <TextView
        android:id="@+id/textview_temperature_result"
        style="@style/forResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_temperature" />

    <TextView
        android:id="@+id/textview_wind"
        style="@style/forLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_temperature_result" />

    <TextView
        android:id="@+id/textview_wind_result"
        style="@style/forResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_wind" />

    <TextView
        android:id="@+id/textview_wetness"
        style="@style/forLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wetness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_wind_result" />

    <TextView
        android:id="@+id/textview_wetness_result"
        style="@style/forResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_wetness" />

    <TextView
        android:id="@+id/textview_condition"
        style="@style/forLabels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/condition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_wetness_result" />

    <TextView
        android:id="@+id/textview_condition_result"
        style="@style/forResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_condition" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/weather_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_condition_result" />


    <include
        android:id="@+id/includedLoadingLayout"
        layout="@layout/loading_layout"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>





















